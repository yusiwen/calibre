    description            = 'Economic and Political news from India'
    publisher              = 'epw.in'
    category               = 'news, finances, politics, India'
    oldest_article         = 7
    max_articles_per_feed  = 100
    no_stylesheets         = True
    use_embedded_content   = False
    simultaneous_downloads = 1
    encoding               = 'utf-8'
    language               = 'en_IN'
    publication_type       = 'newspaper'
    #timefmt                = ''
